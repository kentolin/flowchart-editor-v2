{
  "id": "network-router",
  "name": "Router",
  "category": "network",
  "description": "Represents a network router with antennas",
  "icon": "preview.svg",
  "tags": ["network", "router", "wireless", "hardware"],
  
  "defaultSize": {
    "width": 100,
    "height": 80
  },
  
  "defaultStyle": {
    "fill": "#e8eaf6",
    "stroke": "#3f51b5",
    "strokeWidth": 2,
    "opacity": 1,
    "textColor": "#000000",
    "fontSize": 12,
    "fontFamily": "Arial, sans-serif",
    "textAlign": "center"
  },
  
  "properties": {
    "antennas": {
      "type": "integer",
      "default": 2,
      "min": 1,
      "max": 4,
      "label": "Number of Antennas"
    }
  },
  
  "ports": {
    "enabled": true,
    "preset": "standard-4",
    "positions": [
      { "id": "top", "x": 0.5, "y": 0, "type": "input" },
      { "id": "right", "x": 1, "y": 0.6, "type": "output" },
      { "id": "bottom", "x": 0.5, "y": 1, "type": "output" },
      { "id": "left", "x": 0, "y": 0.6, "type": "input" }
    ]
  },
  
  "handles": {
    "enabled": true,
    "preset": "all-corners-sides",
    "positions": ["nw", "n", "ne", "e", "se", "s", "sw", "w"]
  },
  
  "constraints": {
    "minWidth": 60,
    "minHeight": 50,
    "maxWidth": 200,
    "maxHeight": 150,
    "aspectRatio": null
  },
  
  "features": {
    "resizable": true,
    "rotatable": false,
    "connectable": true,
    "groupable": true,
    "lockable": true,
    "clonable": true
  },
  
  "metadata": {
    "version": "1.0.0",
    "author": "System",
    "created": "2025-01-01",
    "updated": "2025-01-01"
  }
}