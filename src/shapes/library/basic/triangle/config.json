{
  "id": "triangle",
  "name": "Triangle",
  "type": "triangle",
  "category": "basic",
  "description": "Basic triangle shape with configurable direction",
  "icon": "preview.svg",
  "tags": ["basic", "geometric", "triangle", "shape"],
  
  "defaultSize": {
    "width": 100,
    "height": 100
  },
  
  "defaultStyle": {
    "fill": "#ffffff",
    "stroke": "#1976d2",
    "strokeWidth": 2,
    "opacity": 1
  },
  
  "defaultProperties": {
    "direction": "up"
  },
  
  "ports": {
    "enabled": true,
    "preset": "standard-4",
    "positions": [
      { "id": "top", "x": 0.5, "y": 0, "type": "input", "direction": "top" },
      { "id": "right", "x": 1, "y": 0.5, "type": "output", "direction": "right" },
      { "id": "bottom", "x": 0.5, "y": 1, "type": "output", "direction": "bottom" },
      { "id": "left", "x": 0, "y": 0.5, "type": "input", "direction": "left" }
    ]
  },
  
  "handles": {
    "enabled": true,
    "preset": "all-corners-sides",
    "positions": ["nw", "n", "ne", "e", "se", "s", "sw", "w"]
  },
  
  "constraints": {
    "minWidth": 40,
    "minHeight": 40,
    "maxWidth": 1000,
    "maxHeight": 1000,
    "aspectRatio": null
  },
  
  "features": {
    "resizable": true,
    "rotatable": true,
    "connectable": true,
    "groupable": true,
    "lockable": true,
    "clonable": true
  },
  
  "metadata": {
    "version": "1.0.0",
    "author": "System",
    "created": "2025-01-01",
    "updated": "2025-01-01",
    "keywords": ["triangle", "basic", "geometric"]
  }
}